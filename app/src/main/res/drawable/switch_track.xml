<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <size
        android:width="40dp"
        android:height="15dp"  />
    <item android:state_checked="true" >
        <shape
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">
            <corners
                android:radius="15dp"/>
            <size
                android:width="40dp"
                android:height="15dp"  />
            <solid
                android:color="#31d454">
            </solid>

        </shape>
    </item>

    <item android:state_checked="false">
        <shape
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">
            <corners
                android:radius="15dp"/>
            <size
                android:width="40dp"
                android:height="15dp"  />
            <solid
                android:color="#ff0000">
            </solid>
        </shape>
    </item>

    <size
        android:width="40dp"
        android:height="15dp"  />

</selector>
