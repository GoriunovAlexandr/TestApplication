<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user1.mytestapplication">

    <application
        android:allowBackup="true"
        android:icon="@drawable/question_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/question_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".MainActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".pages.LogInPage"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>

        <activity android:name=".pages.MainPage"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>

        <activity android:name=".tabs.QuestionTabActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity android:name=".tabs.SettingsTabActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>

        <activity android:name=".tabs.UserProfileTab"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
    </application>

</manifest>